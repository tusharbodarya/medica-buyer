<div class="main-content-inner">
    <!-- main-content-wrap -->
    <div class="main-content-wrap">
        <div class="flex items-center flex-wrap justify-between gap20 mb-27">
            <h3>Add New Review</h3>
            <ul class="breadcrumbs flex items-center flex-wrap justify-start gap10">
                <li>
                    <a href="index.html"><div class="text-tiny">Dashboard</div></a>
                </li>
                <li>
                    <i class="icon-chevron-right"></i>
                </li>
                <li>
                    <a href="#"><div class="text-tiny">Review</div></a>
                </li>
                <li>
                    <i class="icon-chevron-right"></i>
                </li>
                <li>
                    <div class="text-tiny">New Review</div>
                </li>
            </ul>
        </div>
        <!-- new-Review -->
        <div class="wg-box">
            <form class="form-new-product form-style-1" action="/admin/reviews" method="POST" enctype="multipart/form-data">
                <% if (typeof errors !== 'undefined') { %>
                    <div class="alert alert-danger" role="alert">
                        <ul>
                            <% errors.forEach(function(error) { %>
                                <li><%= error %></li>
                            <% }) %>
                        </ul>
                    </div>
                <% } %>
                <fieldset class="name">
                    <div class="body-title">Review name <span class="tf-color-1">*</span></div>
                    <input class="flex-grow" type="text" placeholder="name"name="name" id="name" tabindex="0" value="<%= typeof name !== 'undefined' ? name : '' %>" aria-required="true" required="">
                </fieldset>
                <fieldset>
                    <div class="body-title">Upload image <span class="tf-color-1">*</span></div>
                    <div class="upload-image flex-grow">
                        <div class="item up-load">
                            <label class="uploadfile" for="myFile">
                                <span class="icon">
                                    <i class="icon-upload-cloud"></i>
                                </span>
                                <span class="body-text">Drop your images here or select <span class="tf-color">click to browse</span></span>
                                <input type="file" name="image" id="myFile">
                            </label>
                        </div>
                    </div>
                </fieldset>
                <fieldset>
                    <div class="body-title">Rating <span class="tf-color-1">*</span></div>
                    <input class="flex-grow" type="number" placeholder="Rating" name="rating" id="rating" min="1" max="5" tabindex="0" value="<%= typeof rating !== 'undefined' ? rating : '' %>" aria-required="true" required="">
                </fieldset>
                <fieldset>
                    <div class="body-title">Review <span class="tf-color-1">*</span></div>
                    <textarea class="flex-grow" type="text" placeholder="Review" name="review" id="review" tabindex="0" value="" aria-required="true" required=""><%= typeof review !== 'undefined' ? review : '' %></textarea>
                </fieldset>
                <div class="bot">
                    <div></div>
                    <button class="tf-button w208" type="submit">Add Review</button>
                </div>
            </form>
        </div>
        <!-- /new-Review -->
    </div>
    <!-- /main-content-wrap -->
</div>