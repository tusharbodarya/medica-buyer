<div class="main-content-inner">
    <!-- main-content-wrap -->
    <div class="main-content-wrap">
        <div class="flex items-center flex-wrap justify-between gap20 mb-27">
            <h3>All Sub category</h3>
            <ul class="breadcrumbs flex items-center flex-wrap justify-start gap10">
                <li>
                    <a href="index.html">
                        <div class="text-tiny">Dashboard</div>
                    </a>
                </li>
                <li>
                    <i class="icon-chevron-right"></i>
                </li>
                <li>
                    <a href="#">
                        <div class="text-tiny">Sub Category</div>
                    </a>
                </li>
                <li>
                    <i class="icon-chevron-right"></i>
                </li>
                <li>
                    <div class="text-tiny">All Sub category</div>
                </li>
            </ul>
        </div>
        <!-- all-category -->
        <div class="wg-box">
            <div class="flex items-center justify-between gap10 flex-wrap">
                <a class="tf-button style-1 w208" href="/admin/sub-categories/create"><i class="icon-plus"></i>Add
                    New</a>
            </div>
            <table id="myTable" class="table table-hover">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Category</th>
                        <th>Image</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% subCategories.forEach(subCategory=> { %>
                        <tr>
                            <td>
                                <%= subCategory.name %>
                            </td>
                            <td>
                                <%= subCategory.category.name %>
                            </td>
                            <td><img src="<%= subCategory.image %>" width="100" height="100"></td>
                            <td>
                                <div class="list-icon-function">
                                    <div class="item edit">
                                        <a href="/admin/sub-categories/edit/<%= subCategory._id %>">
                                            <i class="icon-edit-3"></i>
                                        </a>
                                    </div>
                                    <div class="item trash">
                                        <a href="/admin/sub-categories/delete/<%= subCategory._id %>"
                                            onclick="return confirm('Are you sure?')">
                                            <i class="icon-trash-2"></i>
                                        </a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
        </div>
        <!-- /all-category -->
    </div>
    <!-- /main-content-wrap -->
</div>